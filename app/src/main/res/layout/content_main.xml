<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="brzocitanje.aplikacija.moji.contactme.MainActivity"
    tools:showIn="@layout/activity_main">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:padding="33dp"
    android:gravity="center"
    android:id="@+id/imagelayout"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/contactlist"
        app:srcCompat="@drawable/profilev_icon_dark"
        android:background="@color/tetxtcolor"
        android:padding="15dp"
        tools:ignore="HardcodedText"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/FavoritsList"
        app:srcCompat="@drawable/favorites_icon_white"
        android:padding="15dp"
        android:background="@drawable/imageview_border" />
</LinearLayout>

    <TextView
        android:id="@+id/startmessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="ContactMe"
        android:visibility="gone"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="27dp"
        android:textColor="@color/tetxtcolor" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lista"
        android:padding="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imagelayout" />
</RelativeLayout>
