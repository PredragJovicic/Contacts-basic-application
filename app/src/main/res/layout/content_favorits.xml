<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="15dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="brzocitanje.aplikacija.moji.contactme.Favorits"
    tools:showIn="@layout/activity_favorits">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="33dp"
        android:gravity="center"
        android:id="@+id/imagelayout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/contactlist"
            app:srcCompat="@drawable/profile_icon_white"
            android:padding="15dp"
            tools:ignore="HardcodedText"
            android:background="@drawable/imageview_border" />
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/FavoritsList"
            app:srcCompat="@drawable/favorites_icon_dark"
            android:padding="15dp"
            android:background="@color/tetxtcolor"/>
    </LinearLayout>


    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imagelayout"
        android:layout_marginTop="10dp"

        android:gravity="center"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:horizontalSpacing="0dp"
        android:verticalSpacing="0dp"

        android:numColumns="2"
        android:stretchMode="columnWidth"
       />


</RelativeLayout>
